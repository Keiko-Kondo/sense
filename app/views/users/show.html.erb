<div class="container">
  <div class="row">
<div class="col-xs-6">

<h4><%= @user.name %>のページ</h4>
<br>
<p>メールアドレス: <%= @user.email %></p>


  <p>アイコン:</p>
  <%= image_tag(@user.image.url) if @user.image && @user.image.url %>

</div>
<div class="col-xs-6">

<br>
<% if @user.id != current_user.id %>
  <%= link_to 'メッセージを送る', conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: :post %>
  <% else %>
    <%= link_to 'メッセージ一覧', conversations_path %>
<% end %>
<br>
<br>
<%= link_to 'プロフィール編集', edit_user_path(@user) %>
</div>

</div>
</div>
