<%= form_with(model:@idea, local: true, url: confirm_current_issue_ideas_path ) do |form| %>

  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= @idea.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @idea.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
  <div class="col-xs-6"><%= image_tag 'kaname.jpg', size: "300x300"%><p>せんす</p></div>
  <div class="col-xs-6">

  <div class="idea_title">
    <%= form.label :タイトル %>
    <br>
    <%= form.text_field :title %>
  </div>

  <div class="idea_idea">
    <%= form.label :アイディア %>
    <br>
    <%= form.text_field :idea %>
  </div>

  <div class="idea_expected_powere">
    <%= form.label :欲しい骨 %>
    <br>
    <%= form.text_field :expected_power %>
  </div>
<br>
   <%# form.hidden_field :current_issue_id  %>

  <%= form.submit %>

<br>

<% end %>
<br>
<%= link_to "一覧画面に戻る", current_issue_ideas_path%>

  </div>
